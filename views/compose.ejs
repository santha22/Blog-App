<%- include("partials/header"); -%>


<div class="w">
    <h1 class="ch">Compose</h1>
    <form action="/compose" method="post">
      <div class="form-group">
        <label>Title:</label>
        <input class="form-control" type="text" name="postTitle" placeholder="Enter Title"/>
      </div>
      <div class="form-group">
        <label>Post:</label>
        <textarea class="form-control" name="postBody"  rows="5" cols="30" placeholder="Enter Text"></textarea>
      </div>
      <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>

  </div>
